/**app.wxss**/
@import 'common/helper';
@import 'common/tab';
@import 'common/btn';
@import 'common/layout';
@import 'common/gallery';
@import 'common/media';
@import 'common/banner';
@import 'common/form';
@import 'common/overlay';
@import 'common/modal';
@import 'common/vant';
@import 'common/lib/weui';

page {
  font-size: 28rpx;
  background: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.icon {
  display: inline-block;
  vertical-align: middle;
}

.icon-right,
.icon-right-white,
.icon-right-blue {
  width: 28rpx;
  height: 28rpx;
}

.icon-checkbox {
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  line-height: 48rpx;
  text-align: center;
  border: 1rpx solid #235f9a;
  border-radius: 50%;
  vertical-align: middle;
}

.icon-checkbox--active {
  background: linear-gradient(#10fc92, #8ee5ee);
  border-color: transparent;
  box-shadow: 0 0 17rpx rgba(210, 210, 210, .67);
}

.icon-arrow-double-down {
  width: 25rpx;
  height: 15rpx;
}

.icon-kxj {
  width: 52rpx;
  height: 52rpx;
}

.icon-sxy {
  width: 32rpx;
  height: 54rpx;
}

.icon-swlxy {
  width: 50rpx;
  height: 49rpx;
}

.icon-xxlxy {
  width: 38rpx;
  height: 54rpx;
}

.icon-qsysk {
  width: 65rpx;
  height: 38rpx;
}

.icon-hbdbz {
  width: 51rpx;
  height: 47rpx;
}

.icon-play,
.icon-stop {
  width: 238rpx;
  height: 238rpx;
}

.icon-play--sm,
.icon-stop--sm {
  width: 64rpx;
  height: 64rpx;
}

.icon-stop--xs {
  width: 50rpx;
  height: 50rpx;
}

.icon-headset {
  width: 31rpx;
  height: 30rpx;
}

.icon-go,
.icon-back {
  width: 40rpx;
  height: 32rpx;
}

.icon-back {
  transform: scale(-1, 1);
}

.icon-back--disabled,
.icon-go--disabled {
  opacity: .5;
  pointer-events: none;
}

.icon-leaf,
.icon-leaf--flip {
  width: 21rpx;
  height: 38rpx;
}

.icon-leaf--flip {
  transform: scale(-1, 1);
}

.icon-arrow-double-left,
.icon-arrow-double-right {
  width: 28rpx;
  height: 26rpx;
}

.icon-arrow-double-right {
  transform: scale(-1, 1);
}

.icon-reading {
  width: 52rpx;
  height: 68rpx;
}

.icon-star {
  width: 40rpx;
  height: 40rpx;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.user-info {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

.user-avatar {
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  border: 4rpx solid #fff;
  border-radius: 50%;
}

.user-avatar image {
  width: 90rpx;
  height: 90rpx;
}