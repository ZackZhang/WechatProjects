.btn-primary {
  background-color: #93f548;
}

.btn-danger {
  background-color: #ff6364;
}

.btn-warning {
  background-color: #fbf551;
}

.btn-sm {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.btn-sm.btn-outline {
  line-height: 58rpx;
}

.btn-lg {
  height: 100rpx;
  line-height: 100rpx;
}

.btn-outline {
  border: 1px solid #626262;
}

.btn-block {
  display: block;
  width: 100%;
  padding: 0;
}

.btn-no-radius {
  border-radius: 0;
}

.btn-round {
  border-radius: 30rpx;
}