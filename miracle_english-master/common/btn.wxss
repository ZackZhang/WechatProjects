.btn {
  position: relative;
  display: inline-block;
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
  font-size: 32rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

