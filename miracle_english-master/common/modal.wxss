/* 弹窗 */
.modal-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal {
  position: relative;
  z-index: 1001;
  width: 580rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}

.modal-tle {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  text-align: center;
}

.modal-close {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translate(0, -50%);
}

.modal-bd {
  max-height: 800rpx;
  overflow: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 30rpx;
  background: #fff;
}

.modal-bd.no-pd {
  padding: 0;
}

.modal-select {
  height: 88rpx;
  line-break: 88rpx;
  padding: 0 20rpx;
  border-radius: 6rpx;
  background: #f5f5f5;
}