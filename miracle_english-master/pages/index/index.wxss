/**index.wxss**/
.page {
  background: linear-gradient(#0672cb, #00fdf0);
}

.login-container {
  border-radius: 10rpx;
}

.nick-input {
  width: 390rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #f2f6f8;
  border-radius: 6rpx;
  border: 1rpx solid #4c5dff;
  box-sizing: border-box;
}

.level-item {
  position: relative;
  padding: 50rpx 40rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  background: #f99719;
  box-shadow: 0 5rpx 13rpx rgba(249, 172, 25, .47);
}

.level-item:nth-of-type(2n+2) {
  background: #c9e003;
  box-shadow: 0 5rpx 13rpx rgba(0, 216, 105, .47);
}

.level-item:nth-of-type(2n+3) {
  background: #00a6d5;
  box-shadow: 0 5rpx 13rpx rgba(0, 200, 213, .47);
}

.level-item--active {
  position: absolute;
  top: 50%;
  right: -15rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 0 17rpx rgba(210, 210, 210, .67);
  transform: translate(0, -50%);
}

.infor-input input {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #f2f6f8;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.banben-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.banben-item {
  flex: 0 0 33.333%;
  color: #01a597;
}