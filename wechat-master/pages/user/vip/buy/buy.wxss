.buy-container {
  height: 100%;
}

.user-info-container{
  display: flex;
  position: relative;
  padding: 20rpx 0;
}
.user-info-container .bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}



.avatar-wrapper {
  display: flex;
  flex: 0 0 200rpx;
  align-items: center;
  justify-content: center;
}

.user-msg-wrapper {
  flex: 1;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border:2px solid #f2f2f2;
  box-shadow:0 0 4px #fff;
}

.user-msg-wrapper .nick-name {
  font-size: 28rpx;
  color: #fff;
}

.user-msg-wrapper .vip-block {
  display: inline-block;
  border-radius: 4rpx;
  width: 60rpx;
  height: 40rpx;
  text-align: center;
  color: #777777;
  font-size: 24rpx;
}

.vip {
  background: -webkit-linear-gradient(45deg, #EDB214,  rgba(240,240,240, 1));
}
.no-vip {
  background:-webkit-linear-gradient(45deg, rgba(149,149,149, 1), rgba(240,240,240, 1));  
}

.ad-wrapper image {
  width: 100%;
  height: 150rpx;
}

.intro-wrapper {
  padding: 20rpx;
}

.weight-text {
  margin-right: 20rpx;
  font-size: 36rpx;
  color: #333;
}

.intro-wrapper .text {
  font-size: 28rpx;
  color: #999;
}

.choose-container {
  display: flex;
  flex-wrap: wrap;
}

.choose-wrapper {
  width: 250rpx;
  padding: 20rpx 20rpx;
}

.choose {
  padding: 20rpx 10rpx;
  border: 4rpx solid #aaa;
  border-radius: 20rpx;
}

.has-choosed {
  border: 4rpx solid orangered;
}

.choose view {
  margin: 10rpx 0;
  text-align: center;
}

.choose .current-price, .price {
  font-weight: bold;
  color: orangered;
}

.symbol {
  font-size: 24rpx;
}

.number {
  font-size: 40rpx;
}

.choose .old-price {
  text-decoration: line-through;
}

.line {
  width: 100%;
  height: 10rpx;
  background: #e5e5e5;
}

.pay-way-wrapper {
  height: 400rpx;
}

.pay-way {
  display: flex;
  padding: 20rpx 40rpx 20rpx 0;
  border-bottom: 2rpx solid #aaa;
}

.pay-way .text {
  flex: 1;
  margin: auto 0;
  font-size: 36rpx;
}

.pay-way .circle {
  display: flex;
  margin: auto 0;
  flex: 0 0 50rpx;
  align-items: center;
  justify-content: center;
  height: 50rpx;
  border: 2rpx solid #aaa;
  border-radius: 50%;
}

.circle .inside-circle {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid orangered;
  border-radius: 50%;
  background: orangered;
}

.confirm {
  display: flex;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #E5E5E5; 
}

.confirm .intro {
  width: 70%;
  margin: auto 0;
  padding: 20rpx;
  background: #fff;
}

.confirm .intro .weight-text {
  font-size: 32rpx;
}

.confirm .intro .price {
  font-size: 40rpx;
}

.confirm .intro .sale {
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.confirm .go {
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
  background: orangered;
  color: #fff;
  text-align: center;
}

.pay-active {
  background-color: #FF6339!important;
}

.expire {
  font-size: 24rpx;
  display: inline-block;
  margin-left: 10rpx;
  color: #F94C3E;
}
