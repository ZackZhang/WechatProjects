<view class="search-view" style="background:{{ scrollTop === 0 ?'-webkit-linear-gradient(top, rgba(255,255,255, 0.6), rgba(255,255,255, 0.3))' :( scrollTop<200 ? 'rgba(255,255,255,'+(scrollTop/400+0.3) +')' : 'rgba(255,255,255,1)')  }} ">
    <view class="serarch-content" style="opacity: {{ scrollTop > 150 ? 1 : 0.8 }}">
      <image src="https://www.yanda123.com/app/search-pic.png" class="search-icon" />
      <input placeholder="请输入搜索内容" class="search-input" maxlength="30" confirm-type="搜索"  bindtap='toHotSearchPage'>
      </input>
      <button class='search-btn' bindtap="toSearch">搜索
      </button>
    </view>
  </view>
